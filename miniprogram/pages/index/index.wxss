page{
  height: 100%;
  background: rgba(233, 233, 233, 0.623);
}
#index{
  display: flex;
  height: 100%;
  width: 100%;
  flex-direction: column;
}

.top{
  display: flex;
  flex-direction: row;
  height: 10%;
  background:#1E90FF;
  justify-content: flex-start;
  align-items: center;
  padding: 0 0 10rpx 10rpx;
}

.search{
  width: 100%;
}

.user{
  width: 100rpx;
  height: 90rpx;
  border-radius: 50%;
  overflow: hidden;
  margin: 10rpx 0 10rpx 20rpx;
}

.bottom{
  display: flex;
  height: 90%;
  flex-direction: column;
  width: 100%;
}

.content{
  flex:9;
  overflow: scroll;
}

.scroll{
  height: 100%;
}

.card{
  transform: translateX(20rpx);
  border-radius: 10px;
  overflow: hidden;
  width: 95%;
  margin-bottom: 20rpx;
  background: #ffffff !important;
}

.menu{
  border-style: solid;
  border-width: 0 0 0.1rpx 0;
  border-color: #d1d1d1;
}

.van-dropdown-menu{
  flex: 1 !important;
}

.menu_toTop{
  position: fixed;
  top: 0;
  width: 100%;
  z-index: 99;
  border-style: solid;
  border-width: 0 0 0.1rpx 0;
  border-color: #d1d1d1;
}

.card_title{
  font-size: 16px;
}

.card_score{
  font-size:14px;
}

.van-card{
  border-style: solid !important;
  border-width: 0 0 0.1rpx 0 !important;
  border-color: rgb(180, 180, 180) !important;
}

.van-tab{
  border-style: solid !important;
  border-width: 0 0 0.1rpx 0 !important;
  border-color: #d1d1d1 !important;
}

.van-loading{
  position: absolute;
  left: 0;
  right: 0;
}