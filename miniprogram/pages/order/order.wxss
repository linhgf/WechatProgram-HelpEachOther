page{
  height: 100%;
  background: rgba(233, 233, 233, 0.623);
}

#order{
  display: flex;
  flex-direction: column;
  height:100%;
}


.content{
  flex:9;
  overflow: scroll;
  display: flex;
  flex-direction: column;
  width: 100%;
}

.scroll{
  height: 100%;
}

.card{
  transform: translateX(20rpx);
  border-radius: 10px;
  overflow: hidden;
  width: 95%;
  margin-bottom: 20rpx;
  background: #ffffff !important;
}
.card_title{
  font-size: 16px;
}

.card_score{
  font-size:14px;
}

.van-card{
  border-style: solid !important;
  border-width: 0 0 0.1rpx 0 !important;
  border-color: rgb(180, 180, 180) !important;
} 

.tab{
  border-style: solid !important;
  border-width: 0 0 0.1rpx 0 !important;
  border-color: #d1d1d1 !important;
}

.cancel_button{
  display: inline;
  font-size: 12px;
  color: #ff3535;
  margin-right: 0;
  background: #ffffff;
}

.cancel_button::after{
  border:none
}