page{
  width: 100%;
  height: 100%;
  background: rgba(233, 233, 233, 0.623);
}


#message{
  display: flex;
  flex-direction: column;
  height: 100%;
}

.title{
  display: flex;
  padding: 0 0 0 15rpx;
  background: #1E90FF;
  font-size: 18px;
  color: #ffffff;
  height: 5%;
  align-items: center;
  border-style: solid;
  border-width: 0 0 1px 0;
  border-color: rgb(202, 202, 202);
}

.title image{
  width: 30px;
  height: 30px;
}

.bottom{
  display: flex;
  flex-direction: column;
  height: 95%;
  overflow:scroll;
}

.scroll{
  flex: 1;
}

.card{
  width: 100%;
  border-style: solid !important;
  border-width: 0 0 1px 0 !important;
  border-color: rgba(180, 180, 180, 0.623);
  background: #ffffff !important;
}

.card_title{
  font-size: 16px;
}